{
  "compilerOptions": {
    "target": "esnext",
    "types": [
      "vite/client",
      "naive-ui/volar",
      "unplugin-icons/types/vue",
      "vitest/globals"
    ],
    "typeRoots": [
      "./node_modules/@types/",
      "./src/env.d.ts"
      // "./types"
    ],
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "strictNullChecks": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "paths": {
      "@/*": ["./src/*"],
    },
    "lib": ["esnext", "dom"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "components.d.ts",
    "vite.config.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "coverage",
    "*.js",
    "**/*.js",
    "src/**/*.spec.*",
    "src/**/*.test.*",
    ".jest/*.ts"
  ]
}
